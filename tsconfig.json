{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib":[
      "dom",
      "es2019",
      "esnext.bigint"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ],
  "typeRoots": [
    "./custom.d.ts",
    "./node_modules/@types"
  ]
}